class Pet:
    def __init__(self, name, strength, speed, energy, hunger):
        self.name = name
        self.__strength = strength
        self.__speed = speed
        self.__energy = energy
        self.__hunger = hunger
    
    def is_dead(self):
        return self.__energy <= 0 or self.__hunger <= 0
    
    def __limit_stats(self):
        self.__strength = max(0, min(self.__strength, 100))
        self.__speed = max(0, min(self.__speed, 100))
        self.__energy = max(0, min(self.__energy, 100))
        self.__hunger = max(0, min(self.__hunger, 100))

    def pushup(self):
        self.__strength += 15
        self.__energy -= 10
        self.__hunger -= 10
        self.__limit_stats()
        print(f"You played with {self.name}!")
        if self.__energy <= 10:
            print("Take a rest")
       

    def run(self):
        self.__speed += 15
        self.__energy -= 10
        self.__hunger -= 10
        self.__limit_stats()
        print(f"You fed {self.name}!")
       

    def rest(self):
        self.__energy += 20
        self.__hunger -= 10
        self.__limit_stats()
        print(f"{self.name} is resting...")
        

    def buffet(self):
        self.__hunger += 30
        self.__energy += 15
        self.__limit_stats()
        

    def show_status(self):
        print("\n--- PET STATUS ---")
        print(f"Name: {self.name}")
        print(f"Strength: {self.__strength}")
        print(f"Hunger: {self.__hunger}")
        print(f"Energy: {self.__energy}")
        print(f"Speed: {self.__speed}")


    
import random





print(" Welcome to the Virtual Pet Game! ")
pet_name = input("What would you like to name your pet? ")

strength1=random.randint(10, 100)
speed1=random.randint(10, 100)
energy1=random.randint(10, 100)
hunger1=random.randint(10, 100)
my_pet = Pet(pet_name, strength1, speed1, energy1, hunger1)



while True:
    my_pet.show_status()
    
    print("What would you like to do?")
    print("1. pushup")
    print("2. run")
    print("3. Rest")
    print("4. buffet")
    print("5. Quit")

    choice = input("Choose an option (1â€“5): ")

    if choice == "1":
        my_pet.pushup()
        if my_pet.is_dead():
            print(f"\nğŸ’€ {pet_name} has died... Hunger or energy reached 0.")
            break
    elif choice == "2":
        my_pet.run()
        if my_pet.is_dead():
            print(f"\nğŸ’€ {pet_name} has died... Hunger or energy reached 0.")
            break
    elif choice == "3":
        my_pet.rest()
        if my_pet.is_dead():
            print(f"\nğŸ’€ {pet_name} has died... Hunger or energy reached 0.")
            break
    elif choice == "4":
        my_pet.buffet()
        if my_pet.is_dead():
            print(f"\nğŸ’€ {pet_name} has died... Hunger or energy reached 0.")
            break
    elif choice == "5":
        print(f"Goodbye! {pet_name} will miss you! ")
        break
    else:
        print("Invalid choice. Try again.")

class Hero:
    def __init__(self, name, money, item):
        self.name = name
        self.money = money
        self.inventory = [item]

    def buy(self, item, cost):
        if self.money >= cost:
            self.inventory.append(item)
            self.money -= cost
            print(f"{self.name} bought {item}!")
        else:
            print("Not enough money!")

class Pet:
    def __init__(self, name):
        self.name = name
        self.__happiness = 50    # private variable

    def play(self):
        self.__happiness += 10
        print(f"You played with {self.name}!")

    def show_status(self):
        print(f"{self.name}'s happiness level is {self.__happiness}.")





class Pet:
    def __init__(self, name):
        self.name = name
        self.__happiness = 50
        self.__hunger = 50
        self.__energy = 50

    # ---------- ACTIONS ----------
    def play(self):
        if self.__energy <= 10:
            print(f"{self.name} is too tired to play!")
            return
        self.__happiness += 15
        self.__energy -= 10
        self.__hunger += 5
        print(f"You played with {self.name}!")

    def feed(self):
        if self.__hunger <= 10:
            print(f"{self.name} is already full!")
            return
        self.__hunger -= 15
        self.__energy += 5
        print(f"You fed {self.name}!")

    def rest(self):
        self.__energy += 20
        self.__happiness -= 5
        print(f"{self.name} is resting...")

    # ---------- STATUS ----------
    def show_status(self):
        print("\n--- PET STATUS ---")
        print(f"Name: {self.name}")
        print(f"Happiness: {self.__happiness}")
        print(f"Hunger: {self.__hunger}")
        print(f"Energy: {self.__energy}")
        print("-------------------\n")


# ---------------- GAME LOOP -----------------

print("ðŸ¾ Welcome to the Virtual Pet Game! ðŸ¾")
pet_name = input("What would you like to name your pet? ")

my_pet = Pet(pet_name)

while True:
    my_pet.show_status()
    
    print("What would you like to do?")
    print("1. Play")
    print("2. Feed")
    print("3. Rest")
    print("4. Quit")

    choice = input("Choose an option (1â€“4): ")

    if choice == "1":
        my_pet.play()
    elif choice == "2":
        my_pet.feed()
    elif choice == "3":
        my_pet.rest()
    elif choice == "4":
        print(f"Goodbye! {pet_name} will miss you! ðŸ¥º")
        break
    else:
        print("Invalid choice. Try again.")


        
    
    
    

    



